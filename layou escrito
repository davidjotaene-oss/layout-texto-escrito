    <script>
        // ===== SISTEMA DE SCORE =====
        function changeScore(player, amount) {
            const el = document.getElementById(player + '-val');
            let score = parseInt(el.innerText);
            if (score + amount >= 0) el.innerText = score + amount;
        }
        
        // ===== SISTEMA DE MODO OBS/PREVIEW =====
        function toggleMode() {
            const body = document.body;
            const modeText = document.getElementById('mode-text');
            
            body.classList.toggle('preview-mode');
            
            if (body.classList.contains('preview-mode')) {
                modeText.textContent = 'MODO PREVIEW';
                scaleLayout();
            } else {
                modeText.textContent = 'MODO OBS';
                const container = document.querySelector('.layout-grid');
                container.style.transform = '';
            }
        }
        
        function scaleLayout() {
            const container = document.querySelector('.layout-grid');
            const windowWidth = window.innerWidth;
            const windowHeight = window.innerHeight;
            
            const layoutWidth = 1920;
            const layoutHeight = 1080;
            
            const scaleX = windowWidth / layoutWidth;
            const scaleY = windowHeight / layoutHeight;
            const scale = Math.min(scaleX, scaleY);
            
            container.style.transform = `scale(${scale})`;
        }
        
        window.addEventListener('resize', () => {
            if (document.body.classList.contains('preview-mode')) {
                scaleLayout();
            }
        });
        
        // ===== SISTEMA DE RECONOCIMIENTO DE VOZ OPTIMIZADO =====
        let recognition = null;
        let isListening = false;
        let continuousMode = false;
        let lastCardDetected = ''; // Evitar duplicados
        let lastDetectionTime = 0;
        
        // Inicializar reconocimiento de voz
        function initVoiceRecognition() {
            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            
            if (!SpeechRecognition) {
                alert('Tu navegador no soporta reconocimiento de voz. Usa Chrome o Edge.');
                return null;
            }
            
            recognition = new SpeechRecognition();
            recognition.lang = 'es-ES';
            recognition.continuous = true; // OPTIMIZACI√ìN: Modo continuo nativo
            recognition.interimResults = true; // OPTIMIZACI√ìN: Resultados parciales para respuesta r√°pida
            recognition.maxAlternatives = 3; // OPTIMIZACI√ìN: Capturar hasta 3 alternativas
            
            // Cuando obtiene un resultado (incluyendo parciales)
            recognition.onresult = (event) => {
                const results = event.results[event.results.length - 1];
                
                // Procesar resultado final o interim con alta confianza
                if (results.isFinal || results[0].confidence > 0.6) {
                    // Revisar todas las alternativas
                    for (let i = 0; i < results.length; i++) {
                        const transcript = results[i].transcript.trim();
                        const confidence = results[i].confidence;
                        
                        console.log(`Detectado [${i}]: "${transcript}" (confianza: ${(confidence * 100).toFixed(1)}%)`);
                        
                        // Evitar procesar la misma carta muy seguido (anti-duplicados)
                        const now = Date.now();
                        if (transcript === lastCardDetected && (now - lastDetectionTime) < 2000) {
                            console.log('‚è≠Ô∏è Carta duplicada ignorada');
                            continue;
                        }
                        
                        // Si tiene confianza razonable, intentar cargar
                        if (confidence > 0.5 || results.isFinal) {
                            lastCardDetected = transcript;
                            lastDetectionTime = now;
                            loadCard(transcript);
                            break; // Solo usar la primera alternativa v√°lida
                        }
                    }
                }
            };
            
            // Cuando termina de escuchar
            recognition.onend = () => {
                console.log('üîÑ Reconocimiento finalizado');
                
                // Si est√° en modo continuo, reiniciar INMEDIATAMENTE
                if (continuousMode) {
                    setTimeout(() => {
                        try {
                            recognition.start();
                            console.log('‚úÖ Reconocimiento reiniciado');
                        } catch (e) {
                            // Si ya est√° corriendo, ignorar
                            if (e.message.includes('already started')) {
                                console.log('Ya est√° escuchando');
                            } else {
                                console.log('‚ö†Ô∏è Reintentando reconocimiento...');
                                setTimeout(() => {
                                    try {
                                        recognition.start();
                                    } catch (err) {
                                        console.error('Error cr√≠tico:', err);
                                    }
                                }, 200);
                            }
                        }
                    }, 100); // OPTIMIZACI√ìN: Reducido de 300ms a 100ms
                } else {
                    stopListening();
                }
            };
            
            // Si hay error
            recognition.onerror = (event) => {
                console.error('Error de reconocimiento:', event.error);
                
                // En modo continuo, reintentar silenciosamente (excepto permiso denegado)
                if (continuousMode && event.error !== 'not-allowed' && event.error !== 'aborted') {
                    console.log('üîÑ Reintentando tras error...');
                    setTimeout(() => {
                        try {
                            if (!isListening) return;
                            recognition.start();
                        } catch (e) {
                            console.log('Reintento fallido, esperando...');
                        }
                    }, 500);
                } else if (event.error === 'not-allowed') {
                    alert('Permiso de micr√≥fono denegado. Por favor, permite el acceso al micr√≥fono.');
                    continuousMode = false;
                    stopListening();
                    document.getElementById('continuous-btn').classList.remove('active');
                } else {
                    stopListening();
                }
            };
            
            // Cuando inicia
            recognition.onstart = () => {
                console.log('üé§ Micr√≥fono activo');
            };
            
            return recognition;
        }
        
        // Modo continuo: ON/OFF
        function toggleContinuousMode() {
            if (!recognition) {
                recognition = initVoiceRecognition();
                if (!recognition) return;
            }
            
            continuousMode = !continuousMode;
            const continuousBtn = document.getElementById('continuous-btn');
            const voiceStatus = document.getElementById('voice-status');
            
            if (continuousMode) {
                // Activar modo continuo
                continuousBtn.classList.add('active');
                voiceStatus.classList.add('active');
                document.getElementById('status-text').textContent = 'Modo Continuo Activo';
                
                // Iniciar reconocimiento
                try {
                    recognition.start();
                    isListening = true;
                    console.log('üé§ MODO CONTINUO ACTIVADO');
                    console.log('üí° Habla claro y pausado para mejores resultados');
                } catch (error) {
                    console.error('Error al iniciar:', error);
                    if (error.message.includes('already started')) {
                        console.log('Ya est√° escuchando');
                        isListening = true;
                    }
                }
            } else {
                // Desactivar modo continuo
                continuousBtn.classList.remove('active');
                voiceStatus.classList.remove('active');
                
                if (recognition) {
                    recognition.stop();
                }
                isListening = false;
                console.log('üîá Modo continuo DESACTIVADO');
            }
        }
        
        // Alternar reconocimiento de voz (bot√≥n normal - modo single)
        function toggleVoiceRecognition() {
            // Si est√° en modo continuo, no hacer nada
            if (continuousMode) {
                console.log('‚ö†Ô∏è Desactiva el modo continuo primero (bot√≥n ‚àû o tecla C)');
                return;
            }
            
            if (!recognition) {
                recognition = initVoiceRecognition();
                if (!recognition) return;
                // Para modo single, cambiar a no-continuo
                recognition.continuous = false;
            }
            
            if (isListening) {
                recognition.stop();
            } else {
                startListening();
            }
        }
        
        // Iniciar escucha (modo single)
        function startListening() {
            isListening = true;
            const voiceBtn = document.getElementById('voice-btn');
            const voiceStatus = document.getElementById('voice-status');
            
            voiceBtn.classList.add('listening');
            voiceStatus.classList.add('active');
            document.getElementById('status-text').textContent = 'Escuchando...';
            
            try {
                recognition.start();
                console.log('üéôÔ∏è Modo single activado - di una carta');
            } catch (error) {
                console.error('Error al iniciar reconocimiento:', error);
                stopListening();
            }
        }
        
        // Detener escucha
        function stopListening() {
            isListening = false;
            const voiceBtn = document.getElementById('voice-btn');
            const voiceStatus = document.getElementById('voice-status');
            
            voiceBtn.classList.remove('listening');
            voiceStatus.classList.remove('active');
        }
        
        // Convertir nombre de carta a nombre de archivo
        function cardNameToFilename(cardName) {
            return cardName
                .toLowerCase()
                .normalize("NFD").replace(/[\u0300-\u036f]/g, "")
                .replace(/\s+/g, '-')
                .replace(/[^a-z0-9-]/g, '')
                + '.png';
        }
        
        // Cargar imagen de carta (SILENCIOSO)
        function loadCard(cardName) {
            const cardSlot = document.getElementById('card-slot');
            const filename = cardNameToFilename(cardName);
            const cardPath = `cartas/${filename}`;
            
            console.log(`üîç Buscando: ${cardPath}`);
            
            const img = new Image();
            
            img.onload = () => {
                // Limpiar slot anterior
                const oldImg = cardSlot.querySelector('img');
                if (oldImg) {
                    oldImg.remove();
                }
                
                // Agregar nueva imagen SILENCIOSAMENTE
                cardSlot.appendChild(img);
                console.log(`‚úÖ Carta cargada: "${cardName}"`);
            };
            
            img.onerror = () => {
                // NO mostrar nada, solo log en consola
                console.log(`‚ùå No encontrada: "${cardName}" ‚Üí ${filename}`);
            };
            
            img.src = cardPath;
            img.alt = cardName;
        }
        
        // Atajos de teclado
        document.addEventListener('keydown', (e) => {
            // Tecla "C" = Modo Continuo
            if (e.key === 'c' || e.key === 'C') {
                toggleContinuousMode();
            }
            // Tecla "V" = Modo Single (solo si NO est√° en modo continuo)
            else if ((e.key === 'v' || e.key === 'V') && !continuousMode) {
                toggleVoiceRecognition();
            }
        });
        
        console.log('üé§ Sistema de voz OPTIMIZADO listo!');
        console.log('‚ö° Mejoras: Respuesta r√°pida + Mayor sensibilidad + Reconexi√≥n instant√°nea');
        console.log('üîÑ Presiona "C" o click en ‚àû para MODO CONTINUO');
        console.log('üéôÔ∏è Presiona "V" o click en micr√≥fono para modo SINGLE');

    </script>
</body>
</html>
